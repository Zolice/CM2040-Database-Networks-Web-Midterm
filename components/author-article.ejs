<tr class="hover w-fit">
    <td>
        <%= typeof(article) != 'undefined' ? article.title : "" %>    
    </td>
    <td><%= typeof(article) != 'undefined' ? article.number_of_reads : "" %></td>
    <td><%= typeof(article) != 'undefined' ? article.number_of_likes : "" %></td>
    <td>
        <% if(typeof(article) != 'undefined' && article.created_at) {
            var date = new Date(article.created_at);
            var options = { day: 'numeric', month: 'long', year: 'numeric', hour: 'numeric', minute: 'numeric', hour12: true };
            var formattedDate = date.toLocaleString('en-US', options);
        } else {
            var formattedDate = "";
        } %>
        <%= formattedDate %>
    </td>
    <td>
        <% if(typeof(article) != 'undefined' && article.published_at) {
            var date = new Date(article.created_at);
            var options = { day: 'numeric', month: 'long', year: 'numeric', hour: 'numeric', minute: 'numeric', hour12: true };
            var formattedDate = date.toLocaleString('en-US', options);
        } else {
            var formattedDate = "";
        } %>
        <%= formattedDate %></td>
    <td>
        <% if(typeof(article) != 'undefined' && article.updated_at) {
            var date = new Date(article.created_at);
            var options = { day: 'numeric', month: 'long', year: 'numeric', hour: 'numeric', minute: 'numeric', hour12: true };
            var formattedDate = date.toLocaleString('en-US', options);
        } else {
            var formattedDate = "";
        } %>
        <%= formattedDate %></td>
    <td class="flex gap-x-2">
        <a href="/author/delete?id=<%= typeof(article) != 'undefined' ? article.id : '' %>"><button class="btn btn-error btn-sm">Delete</button></a>
        <a href="/author/draft?id=<%= typeof(article) != 'undefined' ? article.id : '' %>"><button class="btn btn-secondary btn-sm">Edit</button></a>
        <a href="/reader/article?id=<%= typeof(article) != 'undefined' ? article.id : '' %>"><button class="btn btn-secondary btn-sm">Share</button></a>
        <a href="/reader/article?id=<%= typeof(article) != 'undefined' ? article.id : '' %>"><button class="btn btn-primary btn-sm">View</button></a>
    </td>

    <td></td>
</tr>
